{% extends "LiipHelloBundle::layout.html.twig" %}

{% block content %}

    {% for slug in slugs %}

        <div>
            <a href="{{ path('liip_hello_get_slug',  {'slug': slug})}}">{{ slug }} in html</a>,
            <a href="{{ path('liip_hello_get_slug', {'slug': slug, '_format': 'json'}) }}">{{ slug }} in json</a> and
            <a href="{{ path('liip_hello_get_slug', {'slug': slug, '_format': 'xml'}) }}">{{ slug }} in xml</a>
            <a href="{{ path('liip_hello_get_slug', {'slug': slug}) }}">{{ slug }} in the default format</a>,
        </div>

    {% endfor %}

    <div><a href="{{ path('liip_hello_get_slugs', {'_format': 'json'}) }}">list slugs in json</a></div>
    <div><a href="{{ path('liip_hello_get_slugs', {'_format': 'xml'}) }}">list slugs in xml</a></div>
    <div><a href="{{ path('liip_hello_get_slugs') }}">list slugs in the default format</a></div>

    Rendered with twig.

{% endblock content %}
